4.1 
function range(a, b, h) {
	let array = [];
	let h = h || 1;

	if (h < 0) {
		for (var i = a; i >= b; i += h)
			array.push(i);
	} else {
		for (var i = a; i <= b; i += h)
			array.push(i);
	}

	return array
}


function sum(range) {
	return range.reduce(function (initValue, currValue) {
		return initValue + currValue;
	}, 0)
}
