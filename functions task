//work
function countBs (testString) {
  	let stringLength = testString.length
    let countLetter = 0
    let i=0
    
	while (i<= stringLength) {
    let letter = testString.charAt(i)
    i++
    if (letter == "B") { 
      countLetter++
    	} 
    }
  return countLetter;
}
function countChar (testString, testChar ) {
  	let stringLength = testString.length
    let countLetter = 0
    let i=0
    
	while (i<= stringLength) {
    let letter = testString.charAt(i)
    i++
    if (letter == testChar) { 
      countLetter++
    	} 
    }
  return countLetter;
}
