function isEven(number) {
	if (number == 0){
    	return true;
    } 
  	else if ( number == 1 ){
    	return false;
    }
  	else if (number < 0) {
//    	const str ="минусовое число"
//    	return str;
//      return isEven(-number+2)
    }
  	else {
    return isEven(number-2);
    }
  }
  
