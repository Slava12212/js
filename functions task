  function countBs (testString) {
  	let stringLength = testString.length
    let countLetter = 0
	for ( let i=0; i<= stringLength; i++ )
    {
    let letter = testString.charAt(i)
    if (letter = "B") { countLetter++ }
    }
  return countLetter;
}

